---
layout: layouts/base.njk
---

{% include 'components/jumbotrons/jum.njk' %}

<div class="container">

{%- for post in collections.metamorphosis -%}

  {% if loop.index0 % 3 == 0 %}
    <div class="row">
  {% endif %}
      <div class="col-md ">
        <div class="card my-4" >
        <img class="card-img-top" src="https://relaxivity.app/images/600/{{post.data.videoart.src}}" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{post.data.title}}</h5>
            <p class="card-text">
              {{post.data.excerpt}}
            </p> 
            <p>
                <a href="{{ post.filePathStem}}" class="card-link">Read More</a>
            </p>
          </div>
        </div>  
      </div>   
  {% if loop.index0 % 3 == 0 %}
    </div>
  {% endif %}      

{%- endfor -%}

</div>